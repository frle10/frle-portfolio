---
import type { CollectionEntry } from 'astro:content';

interface Props {
  project: CollectionEntry<'work'>;
}

const { data, id } = Astro.props.project;
---

<a class="card" href={`/work/${id}`}>

  <div class="text-content">
    <span class="title">{data.title}</span>
    <div class="details">
      <p>{data.description}</p>
      <div class="tags">
        {data.tags.map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    </div>
  </div>

  <img src={data.img} alt={data.img_alt || ''} loading="lazy" decoding="async" />
  
  <div class="scrim"></div>
</a>

<style>
  .card {
    display: grid;
    position: relative; /* Needed for z-index context */
    height: auto; /* Let the card grow with its content on mobile */
    min-height: 18rem; /* A minimum height to ensure images look good */
    background: var(--gradient-subtle);
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    text-decoration: none;
    transition: box-shadow 0.3s ease, transform 0.3s ease;
  }

  .card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  /* --- Image --- */
  img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    /* The image itself is dimmed slightly to help with contrast */
    filter: brightness(0.9);
    transition: filter 0.3s ease;
  }
  .card:hover img {
    filter: brightness(1);
  }

  /* --- Scrim for Readability --- */
  .scrim {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1; /* Sits between text and image */
    
    /* THEME-AWARE GRADIENT: Uses your site's background color variable */
    background: linear-gradient(180deg, 
      hsla(var(--gray-999-basis), 0) 0%, /* Transparent at top */
      hsla(var(--gray-999-basis), 0.8) 60%, /* Semi-transparent in middle */
      hsla(var(--gray-999-basis), 1) 100%  /* Fully opaque at bottom */
    );
    pointer-events: none;
  }

  /* --- Text Content Layout --- */
  .text-content {
    position: relative; /* Allows it to sit on top of the image/scrim */
    z-index: 2; /* Sits on top of everything else */
    height: 100%;
    
    /* The Flexbox solution to prevent overlap */
    display: flex;
    flex-direction: column;
    justify-content: space-between;

    padding: 1rem;
    color: var(--text-color); /* Use a theme-aware text color */
  }

  .title {
    display: inline-block;
    align-self: flex-start; /* This keeps it at the top of the flex container */
    padding: 0.5rem 1rem;
    
    /* --- This is the restored background --- */
    background: var(--gray-999); /* A solid, dark background for the pill */
    color: var(--gray-50);       /* A bright, high-contrast text color */
    
    border-radius: 0.375rem;
    font-family: var(--font-brand);
    font-size: var(--text-base);
    font-weight: 500;
    /* We no longer need the border or backdrop-filter from the previous version */
  }

  .details {
    /* Details are fully visible by default now */
    color: var(--text-color-subtle, var(--gray-300));
  }

  .details p {
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    margin: 0 0 0.75rem 0;
    color: var(--text-color, var(--gray-50));
    text-shadow: 0 1px 2px hsla(var(--gray-999-basis), 0.5); /* Shadow for readability */
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
  }

  .tag {
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    font-weight: 500;
    background-color: hsla(var(--gray-0-basis), 0.1);
    border: 1px solid hsla(var(--gray-0-basis), 0.15);
    color: var(--text-color, var(--gray-100));
    padding: 0.25rem 0.625rem;
    border-radius: 999px;
  }
  
  /* --- DESKTOP HOVER EFFECT --- */
  /* On larger screens, we introduce the hover effect */
  @media (min-width: 50em) {
    .card {
      height: 22rem; /* Revert to a fixed height on desktop */
    }

    /* Hide the details and scrim by default on desktop */
    .details, .scrim {
      opacity: 0;
      transition: opacity 0.3s ease-in-out;
    }

    /* Show them on hover */
    .card:hover .details,
    .card:hover .scrim {
      opacity: 1;
    }

    .title {
      font-size: var(--text-lg);
    }

    .details p {
      font-size: var(--text-lg);
    }
  }
</style>
