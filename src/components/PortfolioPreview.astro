---
import type { CollectionEntry } from 'astro:content';

interface Props {
  project: CollectionEntry<'work'>;
}

const { data, id } = Astro.props.project;
---

<a class="card" href={`/work/${id}`}>

  <div class="text-content">
    <span class="title">{data.title}</span>
    <div class="details">
      <p>{data.description}</p>
      <div class="tags">
        {data.tags.map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    </div>
  </div>

  <img src={data.img} alt={data.img_alt || ''} loading="lazy" decoding="async" />
  
  <div class="scrim"></div>
</a>

<style>
  .card {
    display: grid;
    position: relative;
    height: auto;
    min-height: 18rem;
    background: var(--gradient-subtle);
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    text-decoration: none;
    transition: box-shadow 0.3s ease, transform 0.3s ease;
  }

  .card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .scrim {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    
    background: linear-gradient(180deg, 
      hsla(var(--gray-999-basis), 0) 0%,
      hsla(var(--gray-999-basis), 0.8) 50%,
      hsla(var(--gray-999-basis), 1) 100%
    );
    pointer-events: none;
  }

  .text-content {
    position: relative;
    z-index: 2;
    height: 100%;
    
    display: flex;
    flex-direction: column;
    justify-content: space-between;

    padding: 1rem;
    color: var(--text-color);
  }

  .title {
    display: inline-block;
    align-self: flex-start;
    padding: 0.5rem 1rem;
    
    background-color: hsla(var(--gray-999-basis), 0.5);
    backdrop-filter: blur(10px);
    border: 1px solid hsla(var(--gray-999-basis), 0.1);
    color: var(--accent-text-over);
    text-shadow: 1px 1px 4px black;
    
    border-radius: 0.375rem;
    font-family: var(--font-brand);
    font-size: var(--text-base);
    font-weight: 500;
  }

  .details {
    color: var(--text-color-subtle, var(--gray-300));
  }

  .details, .scrim {
    opacity: 0;
  }

  .details p {
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    margin: 0 0 0.75rem 0;
    color: var(--text-color, var(--gray-50));
    text-shadow: 0 1px 2px hsla(var(--gray-999-basis), 0.5);

    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
  }

  .tag {
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    font-weight: 500;
    padding: 0.25rem 0.625rem;
    border-radius: 999px;

    background-color: hsla(var(--gray-0-basis), 0.2);
    backdrop-filter: blur(12px);
    border: 1px solid hsla(var(--gray-999-basis), 0.5);
    color: var(--text-color, var(--gray-100));
  }
  
  @media (min-width: 50em) {
    .card {
      height: 22rem;
    }

    .details, .scrim {
      opacity: 0;
      transition: opacity 0.3s ease-in-out;
    }

    .card:hover .details,
    .card:hover .scrim {
      opacity: 1;
    }

    .title {
      font-size: var(--text-lg);
    }

    .details p {
      font-size: var(--text-md);
    }
  }
</style>
