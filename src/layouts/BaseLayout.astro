---
// Learn about using Astro layouts:
// https://docs.astro.build/en/core-concepts/layouts/

// Component Imports
import MainHead from '../components/MainHead.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title?: string | undefined;
	description?: string | undefined;
}

const { title, description } = Astro.props;
---

<html lang="en">
	<head>
		<MainHead title={title} description={description} />
	</head>
	<body>
		<div class="stack backgrounds">
			<Nav />
			<slot />
			<Footer />
		</div>

		<script>
			// Add “loaded” class once the document has completely loaded.
			addEventListener('load', () => document.documentElement.classList.add('loaded'));
		</script>

		<style>
			:root {
				--_placeholder-bg: linear-gradient(transparent, transparent);

				/* --- NEW: Sophisticated, Multi-Layered Gradients for Dark Mode --- */
				/* This creates a sharp "swoosh" on the top left and a soft glow on the right */
				--gradient-main-glow:
					radial-gradient(ellipse 50% 100% at 0% 100%, hsla(var(--accent-regular-basis), 0.4), transparent 50%),
					radial-gradient(ellipse 50% 50% at 100% 0%, hsla(var(--accent-regular-basis), 0.3), transparent 70%);

				/* A simple glow from the bottom for other sections */
				--gradient-subtle-glow: 
					radial-gradient(ellipse 100% 60% at 50% 110%, hsla(var(--accent-regular-basis), 0.15), transparent);

				/* --- Light Mode Gradients (Kept simpler) --- */
				--gradient-main-glow-light: 
					radial-gradient(ellipse 60% 50% at 50% 50%, hsla(var(--accent-regular-basis), 0.3), transparent 70%);
				--gradient-subtle-glow-light: 
					radial-gradient(ellipse 100% 60% at 50% 110%, hsla(var(--accent-regular-basis), 0.1), transparent);


				/* --- Default to Dark Mode Gradient Variables --- */
				--bg-image-main: var(--gradient-main-glow);
				--bg-image-subtle-1: var(--gradient-subtle-glow);
				--bg-image-subtle-2: var(--gradient-subtle-glow);
				--bg-image-footer: var(--gradient-subtle-glow);

				/* Other simplified variables */
				--bg-image-main-curves: var(--_placeholder-bg);
				--bg-blend-mode: normal;
				--bg-svg-blend-mode: normal;
				--bg-gradient-size: 100%;
			}

			/* --- Define which gradients to use in Light Mode --- */
			:root:not(.theme-dark) {
				--bg-image-main: var(--gradient-main-glow-light);
				--bg-image-subtle-1: var(--gradient-subtle-glow-light);
				--bg-image-subtle-2: var(--gradient-subtle-glow-light);
				--bg-image-footer: var(--gradient-subtle-glow-light);
			}

			.backgrounds {
				min-height: 100%;
				isolation: isolate;
				background:
					url('/assets/backgrounds/noise.png') top center/220px repeat,
					var(--bg-image-footer) bottom center / 100% 50% no-repeat,
					var(--bg-image-main) top center / 100% 100% no-repeat,
					var(--gray-999);
				background-blend-mode: overlay, normal, normal, normal;
			}

			@media (forced-colors: active) {
				.backgrounds {
					background: none;
				}
			}
		</style>
	</body>
</html>
